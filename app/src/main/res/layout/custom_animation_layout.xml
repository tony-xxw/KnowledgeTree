<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_scale"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/icon_large"
        android:visibility="gone" />

    <!--上下弹动动画-->
    <com.wynne.knowledge.tree.widget.LoadingView
        android:id="@+id/iv_load"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:src="@drawable/pic_1"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_char"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="变化字母动画" />

        <TextView
            android:id="@+id/tv_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:textSize="15sp"
            tools:text="字母变化" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.wynne.knowledge.tree.widget.ObjectImageView
            android:id="@+id/iv_object"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_circle" />

        <Button
            android:id="@+id/btn_object"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="属性动画自由落体" />
    </LinearLayout>
</LinearLayout>