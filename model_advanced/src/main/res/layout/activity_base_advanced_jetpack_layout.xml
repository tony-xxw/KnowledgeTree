<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/tlBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:titleMargin="5dp"
        app:titleTextColor="@color/colorLightBlack" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_stoken_btn_gray"
        android:onClick="onNavigationClick"
        android:text="Navigation" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_stoken_btn_gray"
        android:onClick="onDataBindingClick"
        android:text="Data Binding" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_stoken_btn_gray"
        android:onClick="onViewModelWithLiveDataClick"
        android:text="ViewModel LiveData" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_stoken_btn_gray"
        android:onClick="onRoomClick"
        android:text="Room" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_stoken_btn_gray"
        android:onClick="onPagingClick"
        android:text="Paging" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_stoken_btn_gray"
        android:onClick="onWorkManagerClick"
        android:text="WorkManager" />


</LinearLayout>